<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="100dp"
        >


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/peliImage"
            android:adjustViewBounds="true"
            android:src="@drawable/centeio"
            android:maxWidth="100dp"
            android:minHeight="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical">

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Produto"
                    android:id="@+id/peliTvProdutoKey"
                    android:layout_gravity="center_vertical|right"
                    android:textColor="@android:color/black"/>

            <View android:layout_width="5dp"
                  android:layout_height="30dp"
                  android:background="@android:color/darker_gray"
                  android:layout_marginLeft="@dimen/margin_left_rigth"
                  android:layout_marginRight="@dimen/margin_left_rigth"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pão centeio"
                    android:id="@+id/peliTvNomeProduto"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:layout_column="2"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qtd. e preço"
                    android:id="@+id/peliTvQuantiddadeEPrecoLabel"
                    android:gravity="bottom"
                    android:layout_gravity="center_vertical|right"
                    />

            <View android:layout_width="5dp"
                  android:layout_height="30dp"
                  android:background="@android:color/darker_gray"
                  android:layout_marginLeft="@dimen/margin_left_rigth"
                  android:layout_marginRight="@dimen/margin_left_rigth"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 x 0.50€ = 11.00€"
                    android:id="@+id/peliTotal"
                    android:gravity="bottom"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical"/>
        </TableRow>
    </TableLayout>

</LinearLayout>